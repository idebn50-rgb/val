        // Count-up timer for our story
        function startCountupTimer() {
            const startDate = new Date('2024-11-11T23:57:00').getTime();

            function updateCountup() {
                const now = new Date().getTime();
                const distance = now - startDate;

                // Calculate time units
                const years = Math.floor(distance / (1000 * 60 * 60 * 24 * 365.25));
                const months = Math.floor((distance % (1000 * 60 * 60 * 24 * 365.25)) / (1000 * 60 * 60 * 24 * 30.44));
                const days = Math.floor((distance % (1000 * 60 * 60 * 24 * 30.44)) / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                // Update display
                document.getElementById('years').textContent = years;
                document.getElementById('months').textContent = months;
                document.getElementById('days').textContent = days;
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            }

            // Update immediately and every second
            updateCountup();
            setInterval(updateCountup, 1000);
        }

        // Countdown to Valentine's Day
        function startValentineCountdown() {
            function updateValentineCountdown() {
                const now = new Date();
                let valentineDay = new Date(now.getFullYear(), 1, 14); // February 14

                // If Valentine's Day has passed this year, set for next year
                if (now > valentineDay) {
                    valentineDay.setFullYear(now.getFullYear() + 1);
                }

                const distance = valentineDay - now;

                // Calculate time units
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                // Update display
                document.getElementById('vDays').textContent = days;
                document.getElementById('vHours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('vMinutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('vSeconds').textContent = seconds.toString().padStart(2, '0');
            }

            // Update immediately and every second
            updateValentineCountdown();
            setInterval(updateValentineCountdown, 1000);
        }

